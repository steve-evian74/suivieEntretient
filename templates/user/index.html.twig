{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <a href="{{ path('security_login')}}"> Connexion</a>
     <a href="{{ path('security_logout')}}"> Deconnexion</a>

    {#% for user in users %}
        {{user.nom}}
        {% for voiture in user.fkVoiture %}
            {{voiture.id}} </br>
        {% endfor %}
    {% endfor %#}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>CodePostale</th>
                <th>Ville</th>
                <th>TelFixe</th>
                <th>TelPortable</th>
                <th>NumeroSiret</th>
                <th>Logo</th>
                <th>Description</th>
                <th>NomEntreprise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {{dump(user)}}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>{#{ [user.roles]|join }#}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.adresse }}</td>
                    <td>{{ user.codePostale }}</td>
                    <td>{{ user.ville }}</td>
                    <td>{{ user.telFixe }}</td>
                    <td>{{ user.telPortable }}</td>
                    <td>{{ user.numeroSiret }}</td>
                    <td>{{ user.logo }}</td>
                    <td>{{ user.description }}</td>
                    <td>{{ user.nomEntreprise }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="18">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}